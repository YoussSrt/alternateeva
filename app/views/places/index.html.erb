<div class="bg-light min-vh-100">
  <div class="container py-5">
    <header class="text-center mb-5">
      <h1 class="display-4 mb-2">Lieux Alternatifs</h1>
      <p class="text-muted">Découvrez des espaces uniques et engagés à Paris</p>
    </header>

    <div class="row g-4">
      <% @places.each do |place| %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 border-0 rounded-4 shadow-sm hover-lift">
            <div class="card-body p-4">
              <div class="d-flex flex-column h-100">
                <div class="mb-4">
                  <div class="category-badge" data-category="<%= place.category %>">
                    <%= place.category %>
                  </div>
                </div>

                <h2 class="card-title mb-3"><%= place.name %></h2>

                <p class="card-text text-muted small mb-4 flex-grow-1">
                  <%= place.description %>
                </p>

                <div class="d-flex align-items-center justify-content-between mt-auto">
                  <div class="d-flex align-items-center text-muted small">
                    <i class="bi bi-geo-alt me-2"></i>
                    <%= place.city %>
                  </div>
                  <%= link_to place_path(place), class: "stretched-link text-decoration-none" do %>
                    <span class="link-dark">Découvrir<i class="bi bi-arrow-right ms-2"></i></span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
